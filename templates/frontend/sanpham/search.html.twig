                    </article> <!-- // Tìm kiếm theo khoảng giá tiền -->
                    <article class="card-group-item">
                        <header class="card-header">
                            <h6 class="title">SEARCH</h6>
                        </header>
                        <div class="text-center filter-content">
                            <div class="card-body">
