{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Chỉnh sửa khuyến mãi
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Chỉnh sửa khuyến mãi
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}

<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Form Example</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal" name="frmKhuyenMai" id="frmKhuyenMai" method="post" action="/backend/khuyenmai/edit.php?km_ma={{ khuyenmai.km_ma }}">
                  <fieldset>
                    <legend>Form Horizontal</legend>
                    <div class="control-group success">
                        <label class="control-label" for="km_ma">Mã khuyến mãi</label>
                        <div class="controls">
                          <input type="text" id="km_ma" name="km_ma" placeholder="Mã khuyen mãi" readonly value="{{ khuyenmai.km_ma }}">
                          <!-- <span class="help-inline">Woohoo!</span> -->
                        </div>
                      </div>
                     <div class="control-group warning">
                      <label class="control-label" for="km_ten">Tên khuyến mãi</label>
                      <div class="controls">
                        <input type="text" id="km_ten" name="km_ten" placeholder="Tên khuyến mãi" value="{{ khuyenmai.km_ten }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                    <div class="control-group warning">
                      <label class="control-label" for="km_noidung">Nội dung khuyến mãi</label>
                      <div class="controls">
                        <input type="text" id="km_noidung" name="km_noidung" placeholder="Nội dung khuyến mãi" value="{{ khuyenmai.km_noidung }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                    <div class="control-group warning">
                      <label class="control-label" for="km_tungay">Từ ngày</label>
                      <div class="controls">
                        <input type="text" id="km_tungay" name="km_tungay" placeholder="Từ ngày" value="{{ khuyenmai.km_tungay }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                    <div class="control-group warning">
                      <label class="control-label" for="km_denngay">Đến ngày</label>
                      <div class="controls">
                        <input type="text" id="km_denngay" name="km_denngay" placeholder="Đến ngày" value="{{ khuyenmai.km_denngay }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                   

                    <div class="form-actions">
                      <button  class="btn btn-primary" name="btnSave">Save changes</button>
                      <button  class="btn" name="btnCancel">Cancel</button>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}