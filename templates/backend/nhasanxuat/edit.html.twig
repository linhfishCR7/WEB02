{# Nội dung trong block headline #}
{% block headline %}
Thêm mới Loại sản phẩm
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}

<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Form Example</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal" name="frmNhaSanXuat" id="frmNhaSanXuat" method="post" action="/backend/nhasanxuat/edit.php?nsx_ma={{ nhasanxuat.nsx_ma }}">
                  <fieldset>
                    <legend>Form Horizontal</legend>
                    <div class="control-group success">
                        <label class="control-label" for="nsx_ma">Mã nhà sản xuất</label>
                        <div class="controls">
                          <input type="text" id="nsx_ma" name="nsx_ma" placeholder="Mã nhà sản xuất" readonly value="{{ nhasanxuat.nsx_ma }}">
                          <!-- <span class="help-inline">Woohoo!</span> -->
                        </div>
                      </div>
                    <div class="control-group warning">
                      <label class="control-label" for="nsx_ten">Tên nhà sản xuất</label>
                      <div class="controls">
                        <input type="text" id="nsx_ten" name="nsx_ten" placeholder="Tên nhà sản xuất" value="{{ nhasanxuat.nsx_ten }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                   

                    <div class="form-actions">
                      <button  class="btn btn-primary" name="btnSave">Save changes</button>
                      <button  class="btn" name="btnCancel">Cancel</button>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}