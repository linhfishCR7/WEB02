{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Thêm mới đơn đặt hàng
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Thêm mới đơn đặt hàng
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<div class="span9" id="content">
    <div class="row-fluid">
        <!-- block -->
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Form Example</div>
            </div>
            <div class="block-content collapse in">
                <div class="span12">
                     <form class="form-horizontal" name="frmDonDatHang" id="frmDonDatHang" method="post" action="/backend/dondathang/edit.php?dh_ma={{ dondathang.dh_ma }}">
                      <fieldset>
                        <legend>Form Horizontal</legend>
                        <div class="control-group success">
                            <label class="control-label" for="dh_ma">Mã đơn đặt hàng</label>
                            <div class="controls">
                            <input type="text" id="dh_ma" name="dh_ma" placeholder="Mã đơn đặt hàng"  readonly value="{{ dondathang.dh_ma }}">
                            <!-- <span class="help-inline">Woohoo!</span> -->
                            </div>
                        </div>

                        <div class="control-group warning">
                            <label class="control-label" for="dh_ngaylap">Ngày lập</label>
                            <div class="controls">
                            <input type="text" id="dh_ngaylap" name="dh_ngaylap" placeholder="Ngày lập" value="{{ dondathang.dh_ngaylap}}">
                            <!-- <span class="help-inline">Something may have gone wrong</span> -->
                            </div>
                        </div>

                        <div class="control-group warning">
                            <label class="control-label" for="dh_ngaygiao">Ngày giao</label>
                            <div class="controls">
                            <input type="text" id="dh_ngaygiao" name="dh_ngaygiao" placeholder="Ngày giao" value="{{ dondathang.dh_ngaygiao }}">
                            <!-- <span class="help-inline">Something may have gone wrong</span> -->
                            </div>
                        </div>

                        <div class="control-group warning">
                            <label class="control-label" for="dh_noigiao">Nơi giao</label>
                            <div class="controls">
                            <input type="text" id="dh_noigiao" name="dh_noigiao" placeholder="Nơi giao" value="{{ dondathang.dh_noigiao }}">
                            <!-- <span class="help-inline">Something may have gone wrong</span> -->
                            </div>
                        </div>
                    
                        <div class="control-group warning">
                            <label class="control-label" for="dh_trangthaithanhtoan">Trạng thái thanh toán</label>
                            <div class="controls">
                            <input type="text" id="dh_trangthaithanhtoan" name="dh_trangthaithanhtoan" placeholder="Trạng thái thanh toán" value="{{ dondathang.dh_trangthaithanhtoan }}">
                            <!-- <span class="help-inline">Something may have gone wrong</span> -->
                            </div>
                        </div>

                        <div class="control-group success">
                            <label for="httt_ma" class="control-label">Hình thức thanh toán</label>
                            <div class="controls">
                                <select class="form-control" id="httt_ma" name="httt_ma">
                                    {% for hinhthucthanhtoan in ds_HTTT %}
                                   {% if hinhthucthanhtoan.httt_ma == dondathang.httt_ma %}
                                        <option value="{{ hinhthucthanhtoan.httt_ma }}" selected>{{ hinhthucthanhtoan.httt_ten }}</option>
                                        {% else %}
                                        <option value="{{ hinhthucthanhtoan.httt_ma }}">{{ hinhthucthanhtoan.httt_ten }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="control-group success">
                            <label for="kh_ma" class="control-label">Khách hàng</label>
                            <div class="controls">
                                <select class="form-control" id="kh_ma" name="kh_ma">
                                    {% for khachhang in ds_KhachHang %}
                                   {% if khachhang.kh_ma == dondathang.kh_ma %}
                                        <option value="{{ khachhang.kh_ma }}" selected>{{ khachhang.kh_ten }}</option>
                                        {% else %}
                                        <option value="{{ khachhang.kh_ma }}">{{ khachhang.kh_ten }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary" name="btnSave">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{# End Nội dung trong block content #}