{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Sửa Hình Sản phẩm
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Sửa Hình Sản phẩm
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Sửa Hình Sản phẩm</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
        <form class="form-horizontal" name="frmhinhsanpham" id="frmhinhanpham" method="post" action="/backend/hinhsanpham/edit.php?hsp_ma={{ hinhsanpham.hsp_ma }}" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label" for="hsp_tentaptin">Hình ảnh</label>
                <br />
                <img src="/assets/uploads/{{ hinhsanpham.hsp_tentaptin }}" class="img-fluid" width="300px"/>
            </div>
            <div class="control-group success">
                <label for="sp_ma" class="control-label">Sản phẩm</label>
                <div class="controls">
                <select class="form-control" id="sp_ma" name="sp_ma">
                    {% for sanpham in ds_sanpham  %}
                        {% if sanpham.sp_ma == hinhsanpham.sp_ma %}
                        <option value="{{ sanpham.sp_ma }}" selected>{{ sanpham.sp_tomtat }}</option>
                        {% else %}
                        <option value="{{ sanpham.sp_ma }}">{{ sanpham.sp_tomtat }}</option>
                        {% endif %}                    
                    {% endfor %}
                </select>
                </div>
            </div>
            <div class="control-group">
                <label for="hsp_tentaptin" class="control-label">Tập tin ảnh</label>
                <div class="controls">
                    <input type="file" class="input-file uniform_on" id="hsp_tentaptin" name="hsp_tentaptin">
                </div>
            </div>
            <button class="btn btn-primary" name="btnSave">Cập nhật</button>
        </form>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}