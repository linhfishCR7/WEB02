{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Edit  Blog
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Edit  Blog
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Form Example</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
        <form class="form-horizontal" name="frmhinhblog" id="frmhinhblog" method="post" action="/backend/blog/edit.php?bl_ma={{ blog.bl_ma }}" >
            <div class="control-group success">
                      <label class="control-label" for="bl_ma">Mã bài đăng</label>
                      <div class="controls">
                        <input type="text" id="bl_ma" name="bl_ma" placeholder="Mã bài đăng" readonly>
                        <!-- <span class="help-inline">Woohoo!</span> -->
                      </div>
            </div>
            <div class="control-group warning">
                <label class="control-label" for="bl_chude">Chủ đề góp ý</label>
                <div class="controls">
                <input type="text" id="bl_chude" name="bl_chude" placeholder="Tên chủ đề góp ý" value="{{ blog.bl_chude }}"></input>
                </div>
            </div>
            
             <div class="control-group">
                    <label class="control-label" for="bl_mota_ngan">Mô tả ngắn</label>
                    <div class="controls">
                        <input type="text" name="bl_mota_ngan" id="bl_mota_ngan" placeholder="Mô tả ngắn" value="{{ blog.bl_mota_ngan }}" ></input>
                    </div>
            </div>

            <div class="control-group">
                    <label class="control-label" for="bl_noidung">Nội dung</label>
                    <div class="controls">
                        <input type="text" name="bl_noidung" id="bl_noidung" placeholder="Nội dung" value="{{ blog.bl_noidung }}"></input>
                    </div>
            </div>
            <div class="control-group">
                    <label class="control-label" for="bl_ngay">Ngày</label>
                    <div class="controls">
                        <input type="date" name="bl_ngay" id="bl_ngay" placeholder="Ngày" value="{{ blog.bl_ngay }}" ></input>
                    </div>
            </div>
            <div class="control-group">
                    <label class="control-label" for="bl_tags">Tags</label>
                    <div class="controls">
                        <input type="text" name="bl_tags" id="bl_tags" placeholder="Tags" value="{{ blog.bl_tags }}"></input>
                    </div>
            </div>
            <div class="control-group success">
                <label for="lsp_ma" class="control-label">Loại Sản phẩm</label>
                <div class="controls">
                <select class="form-control" id="lsp_ma" name="lsp_ma">
                    {% for loaisanpham in ds_loaisanpham %}
                        {% if loaisanpham.lsp_ma == sanpham.lsp_ma %}
                            <option value="{{ loaisanpham.lsp_ma }}" selected>{{ loaisanpham.lsp_ten }}</option>
                        {% else %}
                            <option value="{{ loaisanpham.lsp_ma }}">{{ loaisanpham.lsp_ten }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
                </div>
            </div>
            <div class="control-group success">
                <label for="kh_ma" class="control-label">Khach Hàng</label>
                <div class="controls">
                <select class="form-control" id="kh_ma" name="kh_ma">
                    {% for khachhang in ds_khachhang %}
                        {% if khachhang.kh_ma == blog.kh_ma %}
                            <option value="{{ khachhang.kh_ma }}" selected>{{ khachhang.kh_tendangnhap }}</option>
                        {% else %}
                            <option value="{{ khachhang.kh_ma }}">{{ khachhang.kh_tendangnhap }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
                </div>
            </div>
            
            <button class="btn btn-primary" name="btnSave">Cập nhật</button>
        </form>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}