{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Sửa chủ đề
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Sửa chủ đề
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}

<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Sửa chủ đề</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal" name="frmChuDeGopY" id="frmChuDeGopY" method="post" action="/backend/chudegopy/edit.php?cdgy_ma={{ chudegopy.cdgy_ma }}">
                  <fieldset>
                    <legend>Sửa chủ đề</legend>
                    <div class="control-group success">
                        <label class="control-label" for="nsx_ma">Mã chủ đề góp ý</label>
                        <div class="controls">
                          <input type="text" id="cdgy_ma" name="cdgy_ma" placeholder="Mã chủ đề góp ý" readonly value="{{ chudegopy.cdgy_ma }}">
                          <!-- <span class="help-inline">Woohoo!</span> -->
                        </div>
                      </div>
                    <div class="control-group warning">
                      <label class="control-label" for="nsx_ten">Tên chủ đề góp ý</label>
                      <div class="controls">
                        <input type="text" id="cdgy_ten" name="cdgy_ten" placeholder="Tên chủ đề góp ý" value="{{ chudegopy.cdgy_ten }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                   

                    <div class="form-actions">
                      <button  class="btn btn-primary" name="btnSave">Save changes</button>
                      <button  class="btn" name="btnCancel">Cancel</button>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}