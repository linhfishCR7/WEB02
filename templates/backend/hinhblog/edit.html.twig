{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Sửa Hình Blog
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Sửa Hình Blog

{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Sửa Hình Blog</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
        <form class="form-horizontal" name="frmhinhblog" id="frmhinhblog" method="post" action="/backend/hinhblog/edit.php?hb_ma={{ hinhblog.hb_ma }}" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label" for="bl_ma">Hình ảnh</label>
                <br />
                <img src="/assets/uploads/{{ hinhblog.hb_tentaptin }}" class="img-fluid" width="300px"/>
            </div>
            <div class="control-group success">
                <label for="bl_ma" class="control-label">Blog</label>
                <div class="controls">
                <select class="form-control" id="bl_ma" name="bl_ma">
                    {% for blog in ds_blog  %}
                        {% if blog.bl_ma == hinhblog.bl_ma %}
                        <option value="{{ blog.bl_ma }}" selected>{{ blog.bl_chude }}</option>
                        {% else %}
                        <option value="{{ blog.bl_ma }}">{{ blog.bl_chude }}</option>
                        {% endif %}                    
                    {% endfor %}
                </select>
                </div>
            </div>
            <div class="control-group">
                <label for="hb_tentaptin" class="control-label">Tập tin ảnh</label>
                <div class="controls">
                    <input type="file" class="input-file uniform_on" id="hb_tentaptin" name="hb_tentaptin">
                </div>
            </div>
            <button class="btn btn-primary" name="btnSave">Cập nhật</button>
        </form>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}