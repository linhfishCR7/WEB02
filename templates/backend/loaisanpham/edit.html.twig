{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Sửa Loại sản phẩm
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Sửa Loại sản phẩm
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}

<div class="span9" id="content">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Sửa Loại sản phẩm</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                 <form class="form-horizontal" name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/backend/loaisanpham/edit.php?lsp_ma={{ loaisanpham.lsp_ma }}">
                  <fieldset>
                    <legend>Sửa Loại sản phẩm</legend>
                    <div class="control-group success">
                        <label class="control-label" for="inputError">Mã loại sản phẩm</label>
                        <div class="controls">
                          <input type="text" id="lsp_ma" name="lsp_ma" placeholder="Mã loại sản phẩm" readonly value="{{ loaisanpham.lsp_ma }}">
                          <!-- <span class="help-inline">Woohoo!</span> -->
                        </div>
                      </div>
                    <div class="control-group warning">
                      <label class="control-label" for="inputError">Tên loại sản phẩm</label>
                      <div class="controls">
                        <input type="text" id="lsp_ten" name="lsp_ten" placeholder="Tên loại sản phẩm" value="{{ loaisanpham.lsp_ten }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                    <div class="control-group error">
                      <label class="control-label" for="inputError">Mô tả loại sản phẩm</label>
                      <div class="controls">
                        <input type="text" id="lsp_mota" name="lsp_mota" placeholder="Mô tả loại sản phẩm" value="{{ loaisanpham.lsp_mota }}">
                        <!-- <span class="help-inline">Please correct the error</span> -->
                      </div>
                    </div>

                    <div class="form-actions">
                      <button  class="btn btn-primary" name="btnSave">Save changes</button>
                      <button  class="btn" name="btnCancel">Cancel</button>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>
</div>
{% endblock %}
{# End Nội dung trong block content #}