{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<div class="span8">
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">THÔNG TIN KHÁCH HÀNG</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
               <div class="table-toolbar">
                  <div class="btn-group">
                     <a href="/backend/khachhang/create.php"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                  </div>
                  <div class="btn-group pull-right">
                     <button data-toggle="dropdown" class="btn dropdown-toggle">Tools <span class="caret"></span></button>
                     <ul class="dropdown-menu">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                     </ul>
                  </div>
               </div>
                
                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                    <thead>
                        <tr>
                            <th>Tên khách hàng</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Ngày tháng năm sinh</th>
                            <th>Số CMND</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for khachhang in ds_khachhang %}
                        <tr class="odd gradeX">
                            <td>{{ khachhang.kh_ten }}</td>
                            <td>{{ khachhang.kh_diachi }}</td>
                            <td>{{ khachhang.kh_dienthoai}}</td>
                            <td>{{ khachhang.kh_email }}</td>
                            <td>{{ khachhang.kh_ngaythangnamsinh}}</td>
                            <td>{{ khachhang.kh_cmnd }}</td>
                            <td class="center">
                                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `lsp_ma` -->
                                 <button class="btn btn-warning"><a href="edit.php?kh_ma={{ khachhang.kh_ma }}"><i class="icon-pencil"></i> Sửa</a>
                                </button>
                                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `nsx_ma` -->
                                <button class="btn btn-danger"><a href="delete.php.php?kh_ma={{ khachhang.kh_ma }}"><i class="icon-remove"></i> Xóa</a>
                                </button>
                                <button class="btn "><a href="detail.php?kh_ma={{ khachhang.kh_ma }}"><i class="icon-eye-open "></i> View</a>
                                </button>
                                
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /block -->
</div>
</div>

{% endblock %}
{# End Nội dung trong block content #}