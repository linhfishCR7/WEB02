                      <label class="control-label" for="kh_trangthai">Trạng thái</label>
                      <div class="controls">
                        <input type="text" id="kh_trangthai" name="kh_trangthai" placeholder="Trạng thái" value="{{ khachhang.kh_trangthai }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>
                    <div class="control-group warning">
                      <label class="control-label" for="kh_quantri">Quản trị</label>
                      <div class="controls">
                        <input type="text" id="kh_quantri" name="kh_quantri" placeholder="Quản trị" value="{{ khachhang.kh_quantri }}">
                        <!-- <span class="help-inline">Something may have gone wrong</span> -->
                      </div>
                    </div>

                   

                    <div class="form-actions">
                      <button  class="btn" name="btnCancel">OK</button>
                    </div>
                  </fieldset>
                </form>

            </div>
        </div>
    </div>
